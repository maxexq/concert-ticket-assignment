{
  "name": "concert-ticket-mono",
  "private": true,
  "scripts": {
    "dev": "turbo run dev",
    "dev:api": "turbo run dev --filter=api",
    "dev:web": "turbo run dev --filter=web",
    "build": "turbo run build",
    "build:api": "turbo run build --filter=api",
    "build:web": "turbo run build --filter=web",
    "start:api": "npm run start --workspace=api",
    "start:web": "npm run start --workspace=web",
    "lint": "turbo run lint",
    "lint:api": "turbo run lint --filter=api",
    "lint:web": "turbo run lint --filter=web",
    "test": "turbo run test",
    "test:api": "npm run test --workspace=api",
    "test:api:watch": "npm run test:watch --workspace=api",
    "test:api:cov": "npm run test:cov --workspace=api",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "prettier": "^3.7.4",
    "turbo": "^2.8.9",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@11.6.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
